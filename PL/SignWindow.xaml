<Window x:Class="PL.SignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SignWindow" Height="450" Width="800">
    <Grid>
        <Button Content="sighn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="217,335,0,0" Click="Sighn"/>
        <Label x:Name="lblId" Content="yuor id" HorizontalAlignment="Left" Margin="139,107,0,0" VerticalAlignment="Top"/>
        <Label Content="choose a username" HorizontalAlignment="Left" Margin="138,157,0,0" VerticalAlignment="Top"/>
        <Label Content="choose a password" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="lblManager" Content="enter the managment password for approve your identity" HorizontalAlignment="Left" Margin="138,107,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="375,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="375,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="358,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtManager"  HorizontalAlignment="Left" Margin="481,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="help" Content="?" HorizontalAlignment="Left" Margin="512,119,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="I am:" HorizontalAlignment="Left" Margin="263,45,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="typeOfUser" HorizontalAlignment="Left" Margin="315,45,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="typeOfUserChanged"/>
    </Grid>
</Window>
