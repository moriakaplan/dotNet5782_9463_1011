<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddDrone" Height="650" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="500*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowBattery" Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowStation" Height="*"/>
            <RowDefinition x:Name="rowParcel"  Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Content="Id:" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Model:" Grid.Row="1" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblBattery" Content="Battery:" Grid.Row="2" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Status:" Grid.Row="3" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Max Weight:" Grid.Row="4" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblParcel" Content="Parcel In Transfer" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Location:" Grid.Row="7" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblStation" Content="Station For First Location:" Grid.Row="5" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="10" TextChanged="IdColor"/>
        <TextBox x:Name="txtModel" Grid.Row="1" Grid.Column="1" Margin="10"/>
        <TextBox x:Name="txtBattery" Grid.Row="2" Grid.Column="1" Margin="10" IsReadOnly="True" SelectionTextBrush="Gray"/>
        <TextBox x:Name="txtStatus" Grid.Row="3" Grid.Column="1" Margin="10" IsReadOnly="True" SelectionTextBrush="Gray"/>
        <ComboBox x:Name="txtWeight" Grid.Row="4" Grid.Column="1" Margin="10"/>
        <ComboBox x:Name="txtStationId" Grid.Row="5" Grid.Column="1" Margin="10" SelectionChanged="txtStationId_SelectionChanged"/>
        <TextBox x:Name="txtParcel" Grid.Row="6" Grid.Column="1" Margin="10"/>
        <Grid Grid.Column="1" Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Lattitude::" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <Label Content="longitude:" Grid.Row="1" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txtLatti" Grid.Row="0" Grid.Column="1" Margin="10"/>
            <TextBox x:Name="txtLongi" Grid.Row="1" Grid.Column="1" Margin="10"/>
        </Grid>
        <Button x:Name="add" Content="Add The &#xD;&#xA;Drone" Grid.Column="0" Grid.Row="8" Click="AddDrone_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,97,0,0" Width="78"/>
        <Button x:Name="close" Content="Close The Window" Grid.Column="1" Grid.Row="8" Click="Close_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button x:Name="update" Content="update the&#xD;&#xA;model" Click="UpdateDroneModel" Grid.Row="8"
                HorizontalAlignment="Left" Margin="53,18,0,0" VerticalAlignment="Top" Width="78"/>
        <Button x:Name="charge" Content="send drone&#xD;&#xA;to charge" Click="SendDroneToCharge" Grid.Column="1" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="22,19,0,0" VerticalAlignment="Top" Width="78"/>
        <Button x:Name="releaseFromCharge" Content="release drone&#xD;&#xA;from charge" Click="ReleaseDroneFromCharge" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="136,9,0,0" VerticalAlignment="Top" Grid.Column="1" Width="78"/>
        <Label x:Name="lblTimeInCharge" Content="Time in charge-" Grid.Row="8" 
               HorizontalAlignment="Left" Margin="135,39,0,0" VerticalAlignment="Top" Height="26" Grid.Column="1"/>
        <TextBox x:Name="txtTimeInCharge" Grid.Row="8"
                 HorizontalAlignment="Left" Margin="136,61,0,0" VerticalAlignment="Top" Width="106" Grid.Column="1"/>
        <Button Content="send drone&#xD;&#xA;to delivery" Click="SendDroneToDelivery" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="53,85,0,0" VerticalAlignment="Top" Width="78"/>
        <Button Content="pick up &#xD;&#xA;parcel" Click="PickUpParcel" HorizontalAlignment="Left" Margin="22,84,0,0" Grid.Row="8" VerticalAlignment="Top" Width="78" Grid.Column="1"/>
        <Button Content="deliver&#xD;&#xA;parcel" Click="DeliverParcel" HorizontalAlignment="Left" Margin="136,84,0,0" Grid.Row="8" VerticalAlignment="Top" Width="78" Grid.Column="1"/>
    </Grid>
</Window>
