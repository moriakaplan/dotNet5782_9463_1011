<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddDrone" Height="650" Width="400"
        Closing="DataWindow_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="500*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowBattery" Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowStation" Height="*"/>
            <RowDefinition x:Name="rowParcel"  Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Content="Id:" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Model:" Grid.Row="1" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblBattery" Content="Battery:" Grid.Row="2" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Status:" Grid.Row="3" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Max Weight:" Grid.Row="4" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblParcel" Content="Parcel In Transfer" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Location:" Grid.Row="7" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblStation" Content="Station For First Location:" Grid.Row="5" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="10" TextChanged="IdColor"/>
        <TextBox x:Name="txtModel" Grid.Row="1" Grid.Column="1" Margin="10" TextChanged="txtModel_TextChanged"/>
        <TextBox x:Name="txtBattery" Grid.Row="2" Grid.Column="1" Margin="10" IsReadOnly="True" Foreground="Gray"/>
        <TextBox x:Name="txtStatus" Grid.Row="3" Grid.Column="1" Margin="10" IsReadOnly="True" Foreground="Gray"/>
        <ComboBox x:Name="txtWeight" Grid.Row="4" Grid.Column="1" Margin="10"/>
        <ComboBox x:Name="txtStationId" Grid.Row="5" Grid.Column="1" Margin="10" SelectionChanged="txtStationId_SelectionChanged"/>
        <TextBox x:Name="txtParcel" Grid.Row="6" Grid.Column="1" Margin="10" IsReadOnly="True" Foreground="Gray"/>
        <Grid Grid.Column="1" Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Lattitude::" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <Label Content="longitude:" Grid.Row="1" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txtLatti" Grid.Row="0" Grid.Column="1" Margin="10" IsReadOnly="True" Foreground="Gray"/>
            <TextBox x:Name="txtLongi" Grid.Row="1" Grid.Column="1" Margin="10" IsReadOnly="True" Foreground="Gray"/>
        </Grid>
        <Button x:Name="add" Content="Add The &#xD;&#xA;Drone" Grid.Column="0" Grid.Row="8" Click="AddDrone_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,97,0,0" Width="78"/>
        <Button x:Name="close" Content="Close The Window" Grid.Column="1" Grid.Row="8" Click="Close_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button x:Name="update" Content="update the&#xD;&#xA;model" Click="UpdateDroneModel" Grid.Row="8"
                HorizontalAlignment="Left" Margin="53,18,0,0" VerticalAlignment="Top" Width="78" Visibility="Hidden"/>
        <Button x:Name="charge" Content="send drone&#xD;&#xA;to charge" Click="SendDroneToCharge" Grid.Column="1" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="22,19,0,0" VerticalAlignment="Top" Width="78" Visibility="Hidden"/>
        <Button x:Name="releaseFromCharge" Content="release drone&#xD;&#xA;from charge" Click="ReleaseDroneFromCharge" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="136,9,0,0" VerticalAlignment="Top" Grid.Column="1" Width="78" Visibility="Hidden"/>
        <Label x:Name="lblTimeInCharge" Content="Time in charge-" Grid.Row="8" Grid.Column="1"
               HorizontalAlignment="Left" Margin="11,69,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="txtTimeInCharge" Grid.Row="8" Grid.Column="1"
                 HorizontalAlignment="Left" Margin="16,91,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="sendDeliver" Content="send drone&#xD;&#xA;to delivery" Click="SendDroneToDelivery" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="53,85,0,0" VerticalAlignment="Top" Width="78" Visibility="Hidden"/>
        <Button x:Name="pickParcel" Content="pick up &#xD;&#xA;parcel" Click="PickUpParcel" Grid.Row="8" Grid.Column="1" 
                HorizontalAlignment="Left" Margin="22,84,0,0" VerticalAlignment="Top" Width="78" Visibility="Hidden"/>
        <Button x:Name="deliver" Content="deliver&#xD;&#xA;parcel" Click="DeliverParcel" Grid.Row="8" Grid.Column="1"
                HorizontalAlignment="Left" Margin="136,84,0,0" VerticalAlignment="Top" Width="78" Visibility="Hidden"/>
        <ComboBox x:Name="options" HorizontalAlignment="Left" Margin="0,43,0,0" Grid.Row="8" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectionChanged="selectOption"/>
        <Label x:Name="lblOptions" Content="Choose the option you want:" HorizontalAlignment="Left" Margin="139,18,0,0" Grid.Row="8" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="OKrelease" Content="release" Grid.Column="1" HorizontalAlignment="Left" Margin="37,113,0,0" Grid.Row="8" VerticalAlignment="Top" Click="ReleaseAfterGetTime"/>
    </Grid>
</Window>
