<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddDrone" Height="650" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="500*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowBattery" Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="rowStation" Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Content="Id:" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Model:" Grid.Row="1" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblBattery" Content="Battery:" Grid.Row="2" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Status:" Grid.Row="3" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Max Weight:" Grid.Row="4" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Location:" Grid.Row="6" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="lblStation" Content="Station For First Location:" Grid.Row="5" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="10"/>
        <TextBox x:Name="txtModel" Grid.Row="1" Grid.Column="1" Margin="10"/>
        <TextBox x:Name="txtBattery" Grid.Row="2" Grid.Column="1" Margin="10" IsReadOnly="True"/>
        <TextBox x:Name="txtStatus" Grid.Row="3" Grid.Column="1" Margin="10" IsReadOnly="True"/>
        <ComboBox x:Name="txtWeight" Grid.Row="4" Grid.Column="1" Margin="10"/>
        <ComboBox x:Name="txtStationId" Grid.Row="5" Grid.Column="1" Margin="10" SelectionChanged="txtStationId_SelectionChanged"/>
        <Grid Grid.Column="1" Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Lattitude::" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <Label Content="longitude:" Grid.Row="1" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txtLatti" Grid.Row="0" Grid.Column="1" Margin="10"/>
            <TextBox x:Name="txtLongi" Grid.Row="1" Grid.Column="1" Margin="10"/>
        </Grid>
        <Button x:Name="add" Content="Add The Drone" Grid.Column="0" Grid.Row="8" Click="AddDrone_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,18,0,0"/>
        <Label x:Name="parcel" Content="Parcel In Transfer" Grid.Row="7" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="close" Content="Close The Window" Grid.Column="1" Grid.Row="8" Click="Close_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button x:Name="update" Content="update the model" Click="UpdateDroneModel" Grid.Row="8" Grid.Column="1"
                HorizontalAlignment="Left" Margin="101,32,0,0" VerticalAlignment="Top"/>
        <Button x:Name="charge" Content="send drone to charge" Click="SendDroneToCharge" Grid.Column="1" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="83,67,0,0" VerticalAlignment="Top"/>
        <Button x:Name="releaseFromCharge" Content="release drone from charge" Click="ReleaseDroneFromCharge" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="94,18,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTimeInCharge" Content="Time in charge-" Grid.Row="8" 
               HorizontalAlignment="Left" Margin="92,38,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="txtTimeInCharge" Grid.Row="8"
                 HorizontalAlignment="Left" Margin="94,59,0,0" VerticalAlignment="Top" Width="106"/>
        <Button Content="send drone to delivery" Click="SendDroneToDelivery" Grid.Column="1" Grid.Row="8" 
                HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
