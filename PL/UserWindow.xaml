<Window x:Class="PL.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="\Images\background1.jpg"/>
    </Window.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="send new parcel" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="42" Margin="222,39,0,0" VerticalAlignment="Top" Width="147" Click="sendNewParcel"/>
        <TextBox Name="txtId" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Margin="60,55,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="91"/>
        <TextBox Name="txtname" Grid.Row="0" Grid.Column="0"  HorizontalAlignment="Left"  Margin="60,73,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="91"/>

        <Label Content="id:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="24" Margin="33,45,0,0" VerticalAlignment="Top" Width="20"/>
        <Label Content="name:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="26" Margin="13,73,0,0" VerticalAlignment="Top" Width="40"/>
        <Button Content="settings" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="33,118,0,0" VerticalAlignment="Top" Click="updateCustomer"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="251,17,0,0" VerticalAlignment="Top" Background="orange" Width="298" Grid.ColumnSpan="2" />
        <!--<ListView x:Name="txtParcelsTo"  Grid.Row="1" Grid.Column="0" MouseDoubleClick="viewParcelTo" Margin="-484,-133,484,132"/>
        <ListView x:Name="txtParcelsFrom" Grid.Row="1" Grid.Column="1" MouseDoubleClick="viewParcelFrom" Margin="-484,-200,484,200"/>-->
    </Grid>
</Window>
