<Window x:Class="PL.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="400" Width="350"
        Closing="DataWindow_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="login" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoginClick" Grid.Column="1" Margin="43,10,0,0" Width="123"/>
        <Label Content="user name:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Grid.Column="1"/>
        <Label Content="password:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Grid.Column="1" Grid.Row="1"/>
        <Label Content="dont have a user?" Grid.Column="1" HorizontalAlignment="Left" Height="26" Grid.Row="2" VerticalAlignment="Top" Width="auto" Margin="0,82,0,0"/>
        <Button Content="sign up" Grid.Column="1" HorizontalAlignment="Left" Margin="107,80,0,0" Grid.Row="2" VerticalAlignment="Top" Height="28" Width="79" Background="LightBlue" Click="signUp"/>
        <!--<Label Content="password" HorizontalAlignment="Left" Margin="74,168,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="160,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>-->

    </Grid>
</Window>
