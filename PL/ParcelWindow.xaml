<Window x:Class="PL.ParcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ParcelWindow" Height="525" Width="500">
    <!--<Window.Resources>
        <TextBlock x:Key="myVisibility" Visibility="Visible"/>
    </Window.Resources>-->
    <!--<Window.Resources>
        <local:
            x:Key="BatteryToColorConverter"/>
    </Window.Resources>-->
    <Grid Height="auto">
        <Label x:Name="timesVisibility"/>
        <Grid x:Name="grid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblId" Content="Id:" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <!--Visibility="{Binding Source={DynamicResource visibility}, Path=Visibility}"-->
            <Label x:Name="lblSender" Content="Sender:" Grid.Row="1" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblTarget" Content="Target:" Grid.Row="2" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblDrone" Content="Drone:" Grid.Row="3" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblWeight" Content="Weight:" Grid.Row="4" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblPriority" Content="Priority:" Grid.Row="5" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblCreateTime" Content="Create time:" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}" 
                   Grid.Row="6" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblAssociateTime" Content="Associate time:" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}"
                   Grid.Row="7" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblPickUpTime" Content="Pick up time:" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}"
                   Grid.Row="8" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="lblDeliverTime" Content="Deliver time:" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}"
                   Grid.Row="9" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>

            <TextBox x:Name="txtId" Text="{Binding  Path=Id}" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}" Grid.Row="0" Grid.Column="1" Margin="10" />
            <ComboBox x:Name="txtSender" Text="{Binding  Path=Sender.Id}" Grid.Row="1" Grid.Column="1" Margin="10,10,200,10" MouseDoubleClick="viewSender" SelectionChanged="txtSender_SelectionChanged"/>
            <ComboBox x:Name="txtTarget" Text="{Binding  Path=Target.Id}" Grid.Row="2" Grid.Column="1" Margin="10,10,200,10" MouseDoubleClick="viewTarget" SelectionChanged="txtTarget_SelectionChanged" />
            <TextBox x:Name="txtDrone" Text="{Binding  Path=Drone.Id}" Grid.Row="3" Grid.Column="1" Margin="10,10,200,10">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <ComboBox x:Name="txtWeight" Text="{Binding  Weight}" Grid.Row="4" Grid.Column="1" Margin="10" />
            <ComboBox x:Name="txtPriority" Text="{Binding  Priority}" Grid.Row="5" Grid.Column="1" Margin="10" />
            <TextBox x:Name="txtCreateTime" Text="{Binding  CreateTime}" Visibility="{Binding  Path=Text, Converter={StaticResource textToVisibilityConverter}}" Grid.Row="6" Grid.Column="1" Margin="10" />
            <TextBox x:Name="txtAssociateTime" Text="{Binding  AssociateTime}" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}" Grid.Row="7" Grid.Column="1" Margin="10" />
            <TextBox x:Name="txtPickUpTime" Text="{Binding  PickUpTime}" Visibility="{Binding ElementName=timesVisibility, Path=Visibility}" Grid.Row="8" Grid.Column="1" Margin="10" />
            <TextBox x:Name="txtDeliverTime" Text="{Binding  DeliverTime}" Visibility="{Binding Path=Text, Converter={StaticResource textToVisibilityConverter}}" Grid.Row="9" Grid.Column="1" Margin="10" />

            <!--<Button x:Name="add" Content="Add parcel" Grid.Row="10" Grid.Column="1"  Click="AddParcel"
                HorizontalAlignment="Left" VerticalAlignment="Center" Width="78" Margin="377,0,0,0"/>
        <Button x:Name="Delete" Content="Delete parcel" Grid.Row="10" Grid.Column="1"  Click="DeleteParcel"
                HorizontalAlignment="Left" VerticalAlignment="Center" Width="90" Margin="103,0,0,0"/>
        <Button x:Name="Update" Content="Update parcel" Grid.Row="10" Grid.Column="1"  Click="UpdateParcel"
                HorizontalAlignment="Left" VerticalAlignment="Center" Width="90" Margin="235,0,0,0"/>-->
        </Grid>
        <Button x:Name="add" Content="add" Click="AddParcel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="30"/>
        <Button x:Name="delete" Content="Delete" Click="DeleteParcel" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Margin="30"/>
        <Button x:Name="btnSender" Background="LightBlue" Click="viewSender" Content="view this customer" HorizontalAlignment="Right" Margin="0,50,10,0" VerticalAlignment="Top"/>
        <Button x:Name="btnTarget" Background="LightBlue" Click="viewTarget" Content="view this customer" HorizontalAlignment="Right" Margin="0,94,10,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDrone" Click="viewDrone" Content="view this drone" Background="LightBlue" HorizontalAlignment="Right" Margin="0,138,10,0" VerticalAlignment="Top" Width="151"/>

    </Grid>
</Window>
